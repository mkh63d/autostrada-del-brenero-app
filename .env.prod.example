# =============================================================================
# Production Environment Configuration
# Copy to .env.prod and fill in values
# =============================================================================

# Image version (set by deploy script or CI)
IMAGE_TAG=prod

# Domain configuration
DOMAIN=autostrada.example.com

# Database
DB_PASSWORD=your_secure_database_password_here

# Django
SECRET_KEY=your_very_long_and_secure_secret_key_here
ALLOWED_HOSTS=autostrada.example.com,api.autostrada.example.com
CORS_ALLOWED_ORIGINS=https://autostrada.example.com

# Container Registry (for deployment script)
GHCR_USER=your_github_username
GHCR_TOKEN=ghp_your_personal_access_token
